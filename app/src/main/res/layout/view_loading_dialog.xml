<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/loading_dialog_background"
    android:padding="8dp">

    <ProgressBar
        android:id="@+id/request_dialog_progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/request_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_dialog_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/label_loading_delivery"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>